{% extends 'base.html.twig' %}

{% block body %}

{% block content %}
    <div class="text-right">
        <a href="{{ path('notatka_dodaj') }}" class="btn btn-info" role="button">
            <span class="glyphicon glyphicon-file" aria-hidden="true"> </span>&nbsp;Dodaj
        </a>
    </div>
<table class="table">
    <thead>
    <tr>
        <th class="text-center">#</th>
        <th class="text-center">Zlecenie</th>
        <th class="text-center">Programista</th>
        <th class="text-center">Notatka</th>
    </tr>
    </thead>
    <tbody>
    {% for n in notatki %}
    <tr class="info">
        <td class="text-center">{{ n.id }}</td>
        <td class="text-center">{{ n.zlecenie.nazwa }}</i></td>
        <td class="text-center">{{ n.programista.imie }}</i></td>
        <td class="text-center">{{ n.notatka }}</i></td>
        <td class="text-center">
            <a href="/notatka/edytuj/{{ n.id }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
        </td>
        <td class="text-center">
            <a href="/remove/notatka/{{ n.id }}">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% endblock %}

{% block stylesheets %}

{% endblock %}
