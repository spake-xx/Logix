{% extends 'base.html.twig' %}

{% block body %}

{% block content %}
    <div class="text-right">
        <a href="{{ path('zlecenie_dodaj') }}" class="btn btn-info" role="button">
            <span class="glyphicon glyphicon-file" aria-hidden="true"> </span>&nbsp;Dodaj
        </a>
    </div>
<table class="table">
    <thead>
    <tr>
        <th class="text-center">#</th>
        <th class="text-center">Nazwa</th>
        <th class="text-center">Klient</th>
        <th class="text-center">Programista</th>
        <th class="text-center">Status</th>
        <th class="text-center">Technologia</th>
        <th class="text-center">Zlecono</th>
    </tr>
    </thead>
    <tbody>
    {% for z in zlecenia %}
    <tr class="{{ z.status=="GOTOWE"?'success':'warning' }}">
        <td class="text-center">{{ z.id }}</td>
        <td class="text-center">{{ z.nazwa }}</i></td>
        <td class="text-center">{{ z.klient.imie }} {{ z.klient.nazwisko }}</i></td>
        <td class="text-center">{{ z.programista.imie }} {{ z.programista.nazwisko }}</i></td>
        <td class="text-center">{{ z.status }}</i></td>
        <td class="text-center">{{ z.technologia }}</i></td>
        <td class="text-center">{{ z.zlecono|date("d-M-Y") }}</i></td>
        <td class="text-center">
            <a href="/zlecenie/edytuj/{{ z.id }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
        </td>
        <td class="text-center">
            <a href="/remove/zlecenie/{{ z.id }}">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
        <td class="text-center">
            <a href="/zlecenie/status/{{ z.id }}">
                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% endblock %}

{% block stylesheets %}

{% endblock %}
