{% extends 'base.html.twig' %}

{% block body %}

{% block content %}
<div class="text-right">
    <a href="{{ path('technologia_dodaj') }}" class="btn btn-info" role="button">
       <span class="glyphicon glyphicon-file" aria-hidden="true"> </span>&nbsp;Dodaj
    </a>
</div>

<table class="table">
    <thead>
    <tr>
        <th class="text-center">#</th>
        <th class="text-center">Technologia</th>
    </tr>
    </thead>
    <tbody>
    {% for t in technologie %}
    <tr class="info">
        <td class="text-center">{{ t.id }}</td>
        <td class="text-center">{{ t.nazwa }}</i></td>
        <td class="text-center">
            <a href="/technologia/edytuj/{{ t.id }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
        </td>
        <td class="text-center">
            <a href="/remove/technologia/{{ t.id }}">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% endblock %}

{% block stylesheets %}

{% endblock %}
